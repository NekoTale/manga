<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff373737">

    <com.danilov.manga.core.view.MangaImageSwitcher
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageSwitcher">


    </com.danilov.manga.core.view.MangaImageSwitcher>

    <com.danilov.manga.core.view.SlidingLayer
            xmlns:slidingLayer="http://schemas.android.com/apk/res/com.danilov.manga"
            android:id="@+id/selector"
            android:layout_width="350dp"
            android:layout_height="fill_parent"
            slidingLayer:stickTo="left"
            android:layout_alignParentLeft="true"
            slidingLayer:closeOnTapEnabled="false"
            slidingLayer:offsetWidth="50dp">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <LinearLayout android:layout_width="50dp" android:layout_height="fill_parent" android:orientation="vertical" android:layout_alignParentRight="true">
                <View android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="0.1" android:clickable="false"/>
                <View android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="0.8"/>
                <View android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="0.1" android:clickable="false"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:background="#99000000"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp">

                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@android:string/ok"
                            style="@style/Manga.ButtonCommon"
                            android:id="@+id/imageOk"/>

                    <EditText android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#ffffffff"
                              android:inputType="numberDecimal"
                              android:id="@+id/imagePicker"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#ffffffff"
                              android:textSize="18sp"
                              android:text=" / "/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#ffffffff"
                              android:textSize="18sp"
                              android:id="@+id/imageQuantity"/>

                </LinearLayout>

                <LinearLayout android:layout_width="fill_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@android:string/ok"
                            style="@style/Manga.ButtonCommon"
                            android:id="@+id/chapterOk"/>

                    <EditText android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#ffffffff"
                              android:inputType="numberDecimal"
                              android:id="@+id/chapterPicker"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#ffffffff"
                              android:textSize="18sp"
                              android:text=" / "/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#ffffffff"
                              android:textSize="18sp"
                              android:id="@+id/chapterQuantity"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </com.danilov.manga.core.view.SlidingLayer>


    <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">

            <View   android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/prevBtn"/>

            <View   android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/nextBtn"/>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="0dp"
                      android:layout_weight="0.8"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">

            <View   android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/prevBtnBottom"/>

            <View   android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="0.5"
                    android:id="@+id/nextBtnBottom"/>

        </LinearLayout>

    </LinearLayout>

    <ProgressBar
            style="@style/Manga.ProgressBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageProgressBar"
            android:layout_alignParentTop="true"
            android:visibility="gone"/>

</RelativeLayout>