    <style name="Manga.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/textfield_search</item>
    </style>

    <style name="Theme.CustomPanel" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/background_material_light</item>
