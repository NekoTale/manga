        <item name="searchViewStyle">@style/Manga.SearchView</item>

        <!--theme dependent-->
        <item name="color_primary">@color/dark_blue</item>
        <item name="color_primary_dark">@color/darkest_blue</item>
        <item name="action_mode_background">@color/light_blue</item>
