<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/drawer_menu"
            android:layout_width="260dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#bb1b1b1b"
            android:layout_gravity="start"
            android:gravity="start">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:padding="15dp"
                android:clickable="true"
                android:background="@drawable/selectable_item_background_black_origin">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/btn_blue_normal"
                    app:border_width="2dp"
                    app:border_color="#e6717171"/>

                <TextView
                    android:layout_toRightOf="@+id/profile_image"
                    android:layout_marginLeft="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/profile_promise"/>

            </RelativeLayout>

            <ListView android:id="@+id/left_drawer"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:choiceMode="singleChoice"
                      android:divider="#ff454546"
                      android:cacheColorHint="#00000000"
                      android:listSelector="@drawable/red_selector"
                      android:dividerHeight="1dp"/>

        </LinearLayout>

        <!-- The main content view -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <View android:layout_width="0dp" android:layout_height="0dp" android:id="@+id/is_large"/>

    </LinearLayout>


</LinearLayout>