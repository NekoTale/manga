<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

      <ImageView
          android:id="@+id/very_big"
          android:scaleType="centerCrop"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"/>

      <com.danilov.mangareaderplus.core.view.ScrollViewParallax
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:viewToParallax="@+id/very_big"
            android:id="@+id/scrollView"
            android:fillViewport="true">

          <!--Actually a main layout-->
          <LinearLayout android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:paddingLeft="5dp"
                  android:paddingRight="5dp"
                  android:paddingTop="15dp">


                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:padding="15dp"
                      android:layout_marginTop="@dimen/manga_info_height_half"
                      android:minHeight="@dimen/manga_info_height"
                      android:background="@drawable/list_item_background">


                      <View
                          android:id="@+id/manga_fake_cover"
                          android:layout_width="130dp"
                          android:layout_marginLeft="15dp"
                          android:layout_height="10dp"/>

                      <!--title-->
                      <LinearLayout android:id="@+id/title_and_download"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_toRightOf="@+id/manga_fake_cover">

                          <TextView android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.6"
                                    android:id="@+id/manga_title"
                                    android:textSize="25sp"
                                    android:textStyle="bold"
                                    android:singleLine="true"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:scrollHorizontally="true"/>

                          <Button android:layout_width="0dp"
                                  android:layout_weight="0.4"
                                  android:layout_height="fill_parent"
                                  style="@style/Manga.ButtonCommon"
                                  android:id="@+id/download"
                                  android:text="@string/sv_download"/>

                      </LinearLayout>

                      <!--cover and buttons-->
                      <LinearLayout
                          android:layout_below="@+id/title_and_download"
                          android:layout_toRightOf="@+id/manga_fake_cover"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:baselineAligned="false"
                          android:orientation="horizontal">

                          <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_weight="0.6">


                              <LinearLayout android:layout_width="fill_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/chapters_quantity_wrapper"
                                            android:orientation="horizontal">

                                  <TextView android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="15sp"
                                            android:textStyle="bold"
                                            android:text="@string/sv_chapters"/>

                                  <TextView android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="15sp"
                                            android:textStyle="bold"
                                            android:layout_marginLeft="5dp"
                                            android:id="@+id/chapters_quantity"/>

                              </LinearLayout>

                              <TextView android:layout_width="fill_parent"
                                        android:textSize="15sp"
                                        android:layout_height="fill_parent"
                                        android:id="@+id/manga_description"/>

                          </LinearLayout>

                          <LinearLayout android:layout_width="0dp"
                                        android:layout_marginTop="-3dp"
                                        android:layout_weight="0.41"
                                        android:orientation="vertical"
                                        android:layout_height="wrap_content">

                              <Button android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:id="@+id/add_to_favorites"
                                      android:text="@string/sv_add_to_favorites"
                                      style="@style/Manga.ButtonCommon"/>

                              <Button android:visibility="gone"
                                      android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      android:id="@+id/remove_from_favorites"
                                      android:text="@string/sv_remove_from_favorites"
                                      style="@style/Manga.ButtonCommon"/>

                              <Button android:layout_width="fill_parent"
                                      android:layout_height="wrap_content"
                                      style="@style/Manga.ButtonCommon"
                                      android:id="@+id/read_online"
                                      android:text="@string/sv_read_online"/>

                          </LinearLayout>

                      </LinearLayout> <!--cover and buttons end-->

                  </RelativeLayout>

                  <ImageView
                      android:id="@+id/manga_cover"
                      android:layout_width="130dp"
                      android:layout_marginLeft="15dp"
                      android:layout_height="@dimen/manga_info_height"/>


              </RelativeLayout>

          </LinearLayout>
          <!--end of main layout-->

      </com.danilov.mangareaderplus.core.view.ScrollViewParallax>

</RelativeLayout>