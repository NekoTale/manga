<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/google_sync_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_item_background"
    android:orientation="vertical"
    android:padding="10dp">

    <com.danilov.supermanga.core.view.CTextView
        android:id="@+id/google_account_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/google_account_info_title"
        android:textColor="?attr/profile_text_category_title"/>

    <com.danilov.supermanga.core.widget.RelativeTimeTextView
        android:id="@+id/google_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/google_account_title"
        android:layout_marginTop="7dp"
        android:textColor="?attr/profile_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/google_account"
        android:layout_marginTop="5dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/google_sync_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/ic_action_file_upload"/>

            <com.danilov.supermanga.core.view.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Синхронизировать"
                android:textColor="?attr/card_text_color"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/google_download_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/selectable_item_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="?attr/button_download_icon"/>

            <com.danilov.supermanga.core.view.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Загрузить"
                android:textColor="?attr/card_text_color"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>