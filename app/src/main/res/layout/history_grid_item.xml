<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:paddingTop="2dp"
              android:paddingBottom="2dp">

    <RelativeLayout android:layout_width="fill_parent"
                  android:layout_height="@dimen/grid_item_height"
                  android:background="@drawable/grid_item_background"
                  android:id="@+id/card_wrapper">


        <ImageView android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:id="@+id/manga_cover"
                   android:layout_above="@+id/bottom_holder"
                   android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/bottom_holder"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/manga_title"
                      android:singleLine="true"
                      android:layout_toLeftOf="@+id/discard_button"
                      android:layout_toStartOf="@+id/discard_button"
                      android:ellipsize="marquee"
                      android:focusable="true"
                      android:textSize="@dimen/grid_item_text_size"
                      android:focusableInTouchMode="true"
                      android:marqueeRepeatLimit="marquee_forever"
                      android:scrollHorizontally="true"
                      android:textColor="@android:color/black"/>

            <ImageButton
                android:id="@+id/discard_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_action_discard"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="?attr/selectableItemBackground"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/is_online"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#CC000000"
        android:layout_alignParentTop="true">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="22sp"
                  android:layout_centerVertical="true"
                  android:text="ONLINE"
                  android:textColor="@android:color/white"/>

    </RelativeLayout>

    <ImageView
            android:id="@+id/bottom"
            android:layout_below="@+id/card_wrapper"
            android:src="@drawable/card_shadow"
            android:layout_height="@dimen/card_shadow"
            android:scaleType="centerCrop"
            android:layout_width="fill_parent"/>


    <View android:layout_width="fill_parent"
          android:layout_height="@dimen/grid_item_height"
          android:background="@drawable/selectable_item_background"/>

</RelativeLayout>