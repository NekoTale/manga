<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_normal_pressed"/>

            <corners android:radius="2dp"/>

            <padding android:top="10dp"
                     android:right="10dp"
                     android:bottom="10dp"
                     android:left="10dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_normal_disabled"/>

            <corners android:radius="2dp"/>

            <padding android:top="10dp"
                     android:right="10dp"
                     android:bottom="10dp"
                     android:left="10dp"/>
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/btn_normal_normal"/>

            <corners android:radius="2dp"/>

            <padding android:top="10dp"
                     android:right="10dp"
                     android:bottom="10dp"
                     android:left="10dp"/>
        </shape>
    </item>

</selector>