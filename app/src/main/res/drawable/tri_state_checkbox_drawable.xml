<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

    <item
        android:drawable="@drawable/mangaholotheme_btn_check_off_pressed_holo_light"
        app:state_checked="false"
        android:state_pressed="true"
        app:state_checked_cross="false" /> <!-- unchecked pressed -->

    <item
        android:drawable="@drawable/mangaholotheme_btn_check_off_focused_holo_light"
        app:state_checked_cross="false"
        app:state_checked="false"
        android:state_selected="true"/> <!-- unchecked selected -->

    <item
        android:drawable="@drawable/mangaholotheme_btn_check_on_holo_light"
        app:state_checked="true"
        android:state_pressed="false"
        android:state_focused="false"
        app:state_checked_cross="false" /> <!-- checked -->

    <item
        android:drawable="@drawable/mangaholotheme_btn_check_on_pressed_holo_light"
        app:state_checked="true"
        android:state_pressed="true"
        app:state_checked_cross="false"/> <!-- checked pressed-->

    <item
        android:drawable="@drawable/mangaholotheme_btn_check_on_focused_holo_light"
        app:state_checked_cross="false"
        app:state_checked="true"
        android:state_selected="true" /> <!-- checked selected-->

    <item
        android:drawable="@drawable/crossed"
        app:state_checked_cross="true"
        android:state_pressed="false"
        android:state_focused="false" /> <!-- crossed -->

    <item
        android:drawable="@drawable/crossed_pressed"
        app:state_checked_cross="true"
        app:state_checked="false"
        android:state_pressed="true" /> <!-- crossed pressed-->

    <item
        android:drawable="@drawable/crossed_selected"
        app:state_checked_cross="true"
        android:state_selected="true"/> <!-- crossed selected-->

    <item android:drawable="@drawable/mangaholotheme_btn_check_off_holo_light" /> <!-- unchecked -->
</selector>