        <activity android:name=".activity.MangaInfoActivity"/>
        <activity android:name=".test.DownloadTestActivity" android:label="Download Test Activity"/>
        <activity android:name=".activity.DownloadsActivity" android:label="DownloadsActivity"/>
        <activity android:name=".test.MangaViewTestActivity" android:label="MangaViewTestActivity"/>
        <activity android:name=".test.LocalImageActivity"/>

        <activity android:name=".activity.MangaQueryActivity"
                  android:windowSoftInputMode="stateVisible|adjustPan"/>

        <service android:name=".core.service.MangaDownloadService"/>
    </application>
</manifest>
